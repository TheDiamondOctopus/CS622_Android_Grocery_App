<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewCart"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:paddingTop="20dp">

        <ImageView
            android:id="@+id/itemImg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/itemName"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="10dp"
            android:text="Item Name"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/itemPrice"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="40dp"
            android:text="9.99"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/quantityText"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="255dp"
            android:layout_marginTop="120dp"
            android:text="Quantity"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/priorityText"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="120dp"
            android:text="Priority"
            android:textSize="18sp" />

        <Button
            android:id="@+id/incQuantity"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="330dp"
            android:layout_marginTop="100dp"
            android:text="+" />

        <Button
            android:id="@+id/decQuantity"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="100dp"
            android:text="-" />

        <Button
            android:id="@+id/incPriority"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="100dp"
            android:text="+" />

        <Button
            android:id="@+id/decPriority"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp"
            android:text="-" />

        <TextView
            android:id="@+id/priorityHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="100dp"
            android:text="Priority" />

        <TextView
            android:id="@+id/quantityHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="255dp"
            android:layout_marginTop="100dp"
            android:text="Quantity" />

        <TextView
            android:id="@+id/purchasedFlag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="170dp"
            android:text="Not Purchased Yet"
            android:textSize="20sp"
            android:textStyle="bold" />

    </android.support.v7.widget.CardView>

</LinearLayout>